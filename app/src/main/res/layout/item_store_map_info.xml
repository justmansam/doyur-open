<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="8dp"
            android:paddingEnd="8dp">

            <RelativeLayout
                android:id="@+id/mapStoreMainImageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mapStoreMainImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:background="#CC000000" />

                <ImageView
                    android:id="@+id/storeMapImageBackground"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignTop="@+id/mapStoreMainImageView"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/add_chat_image" />

                <TextView
                    android:id="@+id/storeMapTextBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/storeMapImageBackground"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-medium"
                    android:text="Resim yükleniyor!\nLütfen bekleyin..."
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/mapStoreMainBacgroundImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/custom_imageview_background" />
            </RelativeLayout>

            <TextView
                android:id="@+id/mapStoreNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mapStoreMainImageLayout"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/mapStoreMainImageLayout"
                android:layout_toRightOf="@+id/mapStoreMainImageLayout"
                tools:text=""
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:requiresFadingEdge="horizontal"
                android:fadingEdgeLength="32dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/mapStoreInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapStoreNameTextView"
                android:layout_alignStart="@+id/mapStoreNameTextView"
                android:layout_alignLeft="@+id/mapStoreNameTextView"
                android:layout_alignBottom="@+id/mapStoreMainImageLayout"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:fadingEdgeLength="64dp"
                android:requiresFadingEdge="vertical"
                android:ellipsize="none"
                android:text="" />

            <TextView
                android:id="@+id/mapStoreUidTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapStoreNameTextView"
                android:layout_alignStart="@+id/mapStoreNameTextView"
                android:layout_alignLeft="@+id/mapStoreNameTextView"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:visibility="invisible" />

            <TextView
                android:id="@+id/mapStoreKeyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapStoreUidTextView"
                android:layout_alignStart="@+id/mapStoreUidTextView"
                android:layout_alignLeft="@+id/mapStoreUidTextView"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:visibility="invisible" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
