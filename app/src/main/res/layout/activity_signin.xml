<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/signin_white_back" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/custom_main_screen_background" />

    <EditText
        android:id="@+id/user_email_text_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="48dp"
        android:ems="10"
        android:hint="E-posta"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:background="@drawable/custom_edittext_transparent_black_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="1dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/signin_email_imageview"
        app:layout_constraintEnd_toStartOf="@+id/signin_email_imageview"
        app:layout_constraintTop_toTopOf="@+id/signin_email_imageview" />

    <ImageView
        android:id="@+id/signin_email_imageview"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/profile_user_email_icon"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/user_email_text_view"
        app:layout_constraintEnd_toEndOf="@+id/user_email_text_view"
        app:layout_constraintTop_toTopOf="@+id/user_email_text_view" />

    <EditText
        android:id="@+id/pass_in_text_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="48dp"
        android:ems="10"
        android:hint="Şifre"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:background="@drawable/custom_edittext_transparent_black_background"
        app:layout_constraintEnd_toEndOf="@+id/user_email_text_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/user_email_text_view"
        app:layout_constraintTop_toBottomOf="@+id/user_email_text_view" />

    <View
        android:id="@+id/divider33"
        android:layout_width="1dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/signin_password_imageview"
        app:layout_constraintEnd_toStartOf="@+id/signin_password_imageview"
        app:layout_constraintTop_toTopOf="@+id/signin_password_imageview" />

    <ImageView
        android:id="@+id/signin_password_imageview"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/profile_user_password_icon"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/pass_in_text_view"
        app:layout_constraintEnd_toEndOf="@+id/pass_in_text_view"
        app:layout_constraintTop_toTopOf="@+id/pass_in_text_view" />

    <Button
        android:id="@+id/reset_password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:background="@android:color/transparent"
        android:onClick="resetPassword"
        android:text="Şifremi unuttum!"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/pass_in_text_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/pass_in_text_view"
        app:layout_constraintTop_toBottomOf="@+id/pass_in_text_view" />

    <Button
        android:id="@+id/button10"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/custom_main_button"
        android:fontFamily="sans-serif-black"
        android:onClick="signIn"
        android:text="Giriş yap"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_password_textview" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginTop="96dp"
        android:fontFamily="sans-serif-medium"
        android:text="Kayıtlı bir hesabın yok mu?"
        android:textColor="#AA000000"
        app:layout_constraintEnd_toEndOf="@+id/button10"
        app:layout_constraintStart_toStartOf="@+id/button10"
        app:layout_constraintTop_toBottomOf="@+id/button10" />

    <Button
        android:id="@+id/signin_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:onClick="gotoMain"
        android:text="Kayıt ol"
        android:textAllCaps="true"
        android:textColor="#1B5E20"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>
