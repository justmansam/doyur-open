<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/signup_background" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/custom_main_screen_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/user_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="96dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingRight="48dp"
                android:paddingEnd="48dp"
                android:background="@drawable/custom_edittext_transparent_white_background"
                android:ems="10"
                android:textSize="16sp"
                android:hint="Kullanıcı adı"
                android:inputType="textPersonName|textCapWords" />

            <ImageView
                android:id="@+id/signup_username_imageview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignTop="@+id/user_name_text_view"
                android:layout_alignEnd="@+id/user_name_text_view"
                android:layout_alignRight="@+id/user_name_text_view"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/custom_signup_images_background"
                android:gravity="center"
                app:srcCompat="@drawable/profile_user_name_icon" />

            <EditText
                android:id="@+id/email_text_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/user_name_text_view"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingRight="48dp"
                android:paddingEnd="48dp"
                android:background="@drawable/custom_edittext_transparent_white_background"
                android:ems="10"
                android:textSize="16sp"
                android:hint="E-posta"
                android:inputType="textEmailAddress" />

            <ImageView
                android:id="@+id/signup_email_imageview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignTop="@+id/email_text_view"
                android:layout_alignEnd="@+id/email_text_view"
                android:layout_alignRight="@+id/email_text_view"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/custom_signup_images_background"
                android:gravity="center"
                app:srcCompat="@drawable/profile_user_email_icon" />

            <EditText
                android:id="@+id/pass_text_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_text_view"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingRight="48dp"
                android:paddingEnd="48dp"
                android:background="@drawable/custom_edittext_transparent_white_background"
                android:ems="10"
                android:textSize="16sp"
                android:hint="Şifre"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/signup_pass_imageview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignTop="@+id/pass_text_view"
                android:layout_alignEnd="@+id/pass_text_view"
                android:layout_alignRight="@+id/pass_text_view"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/custom_signup_images_background"
                android:gravity="center"
                app:srcCompat="@drawable/profile_user_password_icon" />

            <EditText
                android:id="@+id/pass_again_text_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/pass_text_view"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingRight="48dp"
                android:paddingEnd="48dp"
                android:background="@drawable/custom_edittext_transparent_white_background"
                android:ems="10"
                android:textSize="16sp"
                android:hint="Şifre (Tekrar)"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/signup_pass_again_imageview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignTop="@+id/pass_again_text_view"
                android:layout_alignEnd="@+id/pass_again_text_view"
                android:layout_alignRight="@+id/pass_again_text_view"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/custom_signup_images_background"
                android:gravity="center"
                app:srcCompat="@drawable/profile_user_password_icon" />

            <RadioButton
                android:id="@+id/accept_conditions_radio_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/pass_again_text_view"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:onClick="acceptedConditions"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:text="doyur Kullanım Koşulları ve Gizlilik Politikası sözleşmelerini kabul ediyorum."
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/accept_conditions_radio_view"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/custom_main_button"
                android:fontFamily="sans-serif-black"
                android:onClick="signUp"
                android:text="Kayıt ol"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_button"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-medium"
                android:text="Zaten hesabın var mı?"
                android:textColor="#AA000000"/>

            <Button
                android:id="@+id/signin_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/textView2"
                android:layout_centerInParent="true"
                android:layout_marginBottom="64dp"
                android:background="@android:color/transparent"
                android:onClick="signIn"
                android:fontFamily="sans-serif-medium"
                android:text="Giriş Yap"
                android:textAllCaps="true"
                android:textColor="#1B5E20" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
